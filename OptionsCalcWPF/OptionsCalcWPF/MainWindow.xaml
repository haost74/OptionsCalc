<Window x:Class="OptionsCalcWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="206" Width="397" HorizontalContentAlignment="Right">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Stretch">
        <DataGrid Name="dgrPortfolios"  AutoGenerateColumns="False" Height="200" Width="657" ItemsSource="{Binding lstPortfolios }"  >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name}" Header="Portfolio Name"/>
                <DataGridTextColumn Binding="{Binding BaseId}" Header="BaseContract"/>
                <DataGridTextColumn Binding="{Binding Delta}" Header="Delta"/>
                <DataGridTextColumn Binding="{Binding Gamma}" Header="Gamma"/>
                <DataGridTextColumn Binding="{Binding Vega}" Header="Vega"/>
                <DataGridTextColumn Binding="{Binding Thetha}" Header="Thetha"/>
                <DataGridTextColumn Binding="{Binding Rho}" Header="Rho"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>
